{
  "id": "/gitlab",
  "cmd": null,
  "cpus": 1.0,
  "mem": 2048,
  "disk": 0,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "volumes": [
      {
        "containerPath": "/etc/gitlab",
        "hostPath": "/srv/gitlab/config",
        "mode": "RW"
      },
      {
        "containerPath": "/var/log/gitlab",
        "hostPath": "/srv/gitlab/logs",
        "mode": "RW"
      },
      {
        "containerPath": "/var/opt/gitlab",
        "hostPath": "/srv/gitlab/data",
        "mode": "RW"
      }
    ],
    "docker": {
      "image": "gitlab/gitlab-ce:latest",
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 0,
          "protocol": "tcp",
          "name": "webui",
          "labels": {}
        },
        {
          "containerPort": 22,
          "hostPort": 0,
          "protocol": "tcp",
          "name": "ssh",
          "labels": {}
        }
      ],
      "privileged": false,
      "parameters": [],
      "forcePullImage": false
    }
  },
  "healthChecks": [
    {
      "path": "/",
      "protocol": "HTTP",
      "portIndex": 0,
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3,
      "ignoreHttp1xx": false
    }
  ],
  "labels": {
    "traefik.enable": "true",
    "traefik.backend": "gitlab",
    "traefik.frontend.rule": "Host:gitlab.{{ domain_name }}",
    "traefik.portIndex": "0"
  },
  "env": {
    "GITLAB_ROOT_PASSWORD":   "{{ gitlab.root_password }}",
    "GITLAB_OMNIBUS_CONFIG":  "external_url '{{ gitlab.endpoint }}/'; nginx['listen_port'] = 80 ; nginx['listen_https'] = false ; nginx['proxy_set_headers'] = { 'X-Forwarded-Proto' => 'https', 'X-Forwarded-Ssl' => 'on' }"
  }
}
